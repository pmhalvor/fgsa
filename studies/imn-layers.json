{
    "name": "imn-polarity-layers",

    "model_name": "imn",

    "dropout": 0.4,

    "loss_weight": 33, 
    "bert_finetune": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "hard",

    "optimizer_name": "adam",
    "weight_decay": 0.5,

    "lr": 1e-8,
    "expression_lr": 1e-6,
    "polarity_lr": 1e-5,
    "target_lr": 1e-6,

    "query": "expression",
    "key": "polarity",
    "value": "polarity",
    "gold_transmission": true,

    "cnn_dim": 768,
    "target_layers": 1,
    "polarity_layers": [1, 3, 5, 7],
    "expression_layers": 1,
    "interactions": 1,    
    "shared_layers": [1, 7],

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": [100, 100, 100]
}
