{
    "name": "imn-bert",

    "model_name": "imn",

    "dropout": 0.4,

    "loss_weight": [33, 30, 27], 
    "bert_finetune": true,
    "bert_expression": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "hard",

    "optimizer_name": "adam",
    "weight_decay": 0.5,

    "lr": [1e-7, 1e-6, 1e-5],
    "expression_lr": 1e-5,
    "polarity_lr": 1e-5,
    "target_lr": 1e-5,

    "query": "expression",
    "key": "polarity",
    "value": "polarity",
    "gold_transmission": true,

    "cnn_dim": 768,
    "shared_layers": 1,
    "target_layers": 1,
    "polarity_layers": 1,
    "expression_layers": 1,
    "interactions": 2,    

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": [100, 100, 100]
}
