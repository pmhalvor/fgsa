{
    "name": "RACL-stack",

    "model_name": "racl",
    
    "cnn_dim": 768,
    "stack_count": [1, 2, 3],

    "dropout": 0.4,

    "loss_weight": 33, 
    "bert_finetune": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "hard",

    "optimizer_name": "adam",
    "weight_decay": 0.5,

    "lr": 1e-8,
    "expression_lr": 1e-6,
    "polarity_lr": 1e-6,
    "target_lr": 1e-6,

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": [150, 150, 150]
}