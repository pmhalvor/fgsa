{
    "name": "fgflex-stack",

    "model_name": "fgflex",
    
    "cnn_dim": 768,
    "stack_count": [0, 1, 2, 3],

    "dropout": 0.4,

    "loss_weight": 7, 
    "bert_finetune": true,
    "bert_expression": true,
    "bert_holder": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0,

    "lr": 1e-7,
    "attn_lr": 1e-6,
    "expression_lr": 1e-6,
    "holder_lr": 1e-6,
    "polarity_lr": 1e-6,
    "target_lr": 1e-6,
    "shared_lr": 1e-6,

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": [150, 150, 150]
}