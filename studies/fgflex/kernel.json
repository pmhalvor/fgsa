{
    "name": "fgflex-kernel-size",

    "model_name": "fgflex",
    
    "kernel_size": [3, 5, 7],
    "cnn_dim": [768, 1536, 384],
    "expanding_cnn": 0,
    "stack_count": 1,

    "dropout": 0.4,

    "loss_weight": 27, 
    "bert_finetune": true,
    "bert_expression": true,
    "bert_holder": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0,

    "lr": 1e-5,
    "target_lr": 1e-4,

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": 25
}
