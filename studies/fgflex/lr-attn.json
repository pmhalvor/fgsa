{
    "name": "fgflex-lr-attn",

    "model_name": "fgflex",
    
    "kernel_size": 5,
    "cnn_dim": 768,
    "expanding_cnn": 0,
    "stack_count": 1,
    "attention_relations": [
        [
            ["target", "expression"],
            ["expression", "target"],
            ["target", "polarity"],
            ["polarity", "target"],
            ["shared", "polarity"],
            ["shared", "all"]
        ]
    ],

    "dropout": 0.4,

    "loss_weight": 27, 
    "bert_finetune": true,
    "bert_expression": true,
    "bert_holder": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0,

    "lr": 1e-5,
    "attn_lr": [0.1, 0.01, 0.001, 0.0001],

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": 50
}
