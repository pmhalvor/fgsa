{
    "name": "fgflex-cnn-dim",

    "model_name": "fgflex",
    
    "cnn_dim": [100, 200, 300, 400],
    "expanding_cnn": 0,
    "gold_transmission": true,
    "kernel_size": 5,
    "stack_count": 1,
    "attention_relations": [
        [
            ["polarity", "target"],
            ["polarity", "expression"]
        ]
    ],
    "split_cnn_kernels":[[3, 5, 7, 9, 11, 13]],
    "split_cnn_tasks": [["target", "polarity", "expression"]],

    "dropout": 0.4,
    "loss_weight": 1, 
    "optimizer_name": "adam",
    "weight_decay": 0,
    "warm_up_constant": 5,
    
    "lr": 1e-5,
    
    "metric": "absa",

    "epochs": [25, 25, 25]
}
