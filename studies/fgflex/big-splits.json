{
    "name": "fgflex-big-splits",

    "model_name": "fgflex",
    
    "subtasks": ["expression", "polarity", "target"],
    "shared_layers": 2,
    "expression_layers": 2,
    "polarity_layers": 2,
    "target_layers": 2,
    "cnn_dim": 3072,
    "expanding_cnn": 0,
    "gold_transmission": true,
    "kernel_size": 5,
    "stack_count": 1,
    "split_cnn_kernels":[[3,3, 5,5, 7,7, 9,9, 11,11, 13,13]],
    "split_cnn_tasks": [
        ["target", "expression", "polarity"],
        ["target", "expression"],
        ["polarity"]
    ],
    "attention_relations": [
        [["polarity", "expression"]]
    ],

    "dropout": 0.4,
    "loss_weight": 1, 
    "optimizer_name": "adam",
    "weight_decay": 0,
    "warm_up_constant": 5,
    
    "lr": 1e-5,
    
    "metric": "absa",

    "epochs": [25, 25, 25]
}