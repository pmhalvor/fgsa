{
    "name": "fgflex-shared-attn",

    "model_name": "fgflex",
    
    "shared_layers": [1, 3, 5, 7], 
    "cnn_dim": 768,
    "expanding_cnn": 0,
    "stack_count": 1,
    "subtasks": ["target", "polarity", "expression"],
    "attention_relations": [
        [
            ["shared", "all"]
        ]
    ],

    "dropout": 0.4,

    "loss_weight": 27, 
    "bert_finetune": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0,

    "lr": 1e-8,
    "attn_lr": 1e-7,
    "expression_lr": 1e-5,
    "holder_lr": 1e-6,
    "polarity_lr": 1e-5,
    "target_lr": 1e-5,
    "shared_lr": 1e-6,

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": 50
}
