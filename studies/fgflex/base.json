{
    "name": "fgflex-base",

    "model_name": "fgflex",
    
    "cnn_dim": 768,
    "expanding_cnn": [0, 2, 3, 4],
    "gold_transmission": true,
    "kernel_size": 5,
    "stack_count": [1, 2, 3],
    "attention_relations": [
        [
            ["expression", "expression"],
            ["polarity", "polarity"],
            ["target", "target"],
            ["target", "polarity"],
            ["expression", "polarity"]
        ]
    ],

    "dropout": 0.4,

    "bert_finetune": true,
    "loss_weight": [1, 5, 10], 
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0,

    "lr": 1e-5,

    "warm_up_constant": 5,

    "epochs": [25, 25, 25]
}