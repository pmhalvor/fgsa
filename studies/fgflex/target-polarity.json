{
    "name": "fgflex-target-polarity",

    "model_name": "fgflex",
    
    "cnn_dim": 768,
    "stack_count": 1,

    "dropout": 0.4,

    "loss_weight": 15, 
    "bert_finetune": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0.5,

    "lr": 1e-9,
    "attn_lr": 1e-7,
    "polarity_lr": 1e-5,
    "target_lr": 1e-5,
    "shared_lr": 1e-9,

    "warm_up_constant": 5,
    "find_scope": false,

    "subtasks": ["target", "polarity"],
    "attention_relations": [
        [
            ["polarity", "polarity"],
            ["polarity", "target"],
            ["target", "polarity"],
            ["target", "target"],
            ["shared", "all"]
        ]
    ],
    "epochs": [10, 10, 10]
}
