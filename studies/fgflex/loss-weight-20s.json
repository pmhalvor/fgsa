{
    "name": "fgflex-loss-weight",

    "model_name": "fgflex",
    
    "cnn_dim": 768,
    "expanding_cnn": 0,
    "stack_count": 1,

    "dropout": 0.4,

    "loss_weight": [17, 20, 23, 25, 27], 
    "bert_finetune": true,
    "bert_polarity": true,
    "bert_target": true,
    "metric": "absa",

    "optimizer_name": "adam",
    "weight_decay": 0.5,

    "lr": 1e-7,
    "attn_lr": 1e-6,
    "expression_lr": 1e-6,
    "holder_lr": 1e-6,
    "polarity_lr": 1e-6,
    "target_lr": 1e-6,
    "shared_lr": 1e-6,

    "warm_up_constant": 5,
    "find_scope": false,

    "epochs": 50
}
