{
    "name": "fgflex-best",

    "model_name": "fgflex",
    
    "cnn_dim": 768,
    "expanding_cnn": 0,
    "gold_transmission": true,
    "kernel_size": 5,
    "stack_count": 1,
    "attention_relations": [
        [
            ["polarity", "expression"]
        ]
    ],
    "split_cnn_kernels":[[3, 7, 11]],
    "split_cnn_tasks": [["target", "expression", "polarity"]],

    "dropout": 0.4,
    "loss_weight": 1, 
    "optimizer_name": "adam",
    "weight_decay": 0,
    "warm_up_constant": 5,
    
    "lr": 1e-5,
    
    "metric": "absa",

    "epochs": [25, 25, 25]
}