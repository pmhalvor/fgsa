{
    "name": "imn-bert",

    "model_name": "imn",

    "dropout": 0.4,

    "loss_weight": 33, 
    "bert_finetune": true,
    "bert_expression": [true, false],
    "bert_polarity": [true, false],
    "bert_target": [true, false],
    "metric": "hard",

    "optimizer_name": "adam",
    "weight_decay": 0.5,

    "lr": 1e-8,
    "expression_lr": 1e-6,
    "polarity_lr": 1e-6,
    "target_lr": 1e-6,

    "query": "polarity",
    "key": "polarity",
    "value": "polarity",

    "cnn_dim": 768,
    "shared_layers": 1,
    "target_layers": 1,
    "polarity_layers": 1,
    "expression_layers": 1,
    "interactions": 2,    

    "warm_up_constant": 5,
    "find_scope": [false, true],

    "epochs": [100, 100, 100]
}
